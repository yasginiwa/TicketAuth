<!--pages/registry/registry.wxml-->
<view class='sec1'>
  <image src='../../assets/registry.png'></image>
</view>

<view class='sec2'>
  <text>注册皇冠蛋糕卡券审核账号</text>
</view>

<view class='sec3'>
  <view class='profile'>
    <input bindinput ='nameInput' placeholder='真实姓名' placeholder-class='phstyle'></input>
  </view>

  <view class='profile'>
    <input type='number' bindinput='phoneInput' placeholder='手机号' placeholder-class='phstyle'></input>
  </view>

  <view class='profile'>
    <input bindinput='pwInput' password='true' placeholder='密码（不少于6位）' placeholder-class='phstyle'></input>
  </view>

  <view class='profile'>
    <input bindinput ='pwConfirmInput' password='true' placeholder='确认密码' placeholder-class='phstyle'></input>
  </view>
</view>

<view class='sec4'>
<button bindtap='onRegistry' disabled='{{btnDisable}}' type='default'>注 册</button>
</view>