.cell .auth {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 100rpx;
  height: 100rpx;
}

.slider {
  position: relative;
  overflow: hidden;
  width: 100%;
}

.slider .del {
  position: absolute;
  background-color: #e64340;
  width: 180rpx;
  text-align: center;
  z-index: 2;
  right: 0rpx;
  color: white;
  height: 360rpx;
  font-size: 32rpx;
  line-height: 360rpx;
  font-weight: bold;
  top: 0rpx;
}
