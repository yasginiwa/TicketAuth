/* pages/authdetail/authdetail.wxss */
.nocontent
{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  position: relative;
}

.nocontent image {
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  top: 400rpx;
}

.nocontent text {
  position: absolute;
  color: #bfbfbf;
  font-size: 28rpx;
  top: 560rpx;
}

.cell {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 120rpx;
  background-color: white;
  border-bottom: solid #eee 1rpx;
}

.cell .icon {
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}

.cell .content {
  margin-left: 10rpx;
  font-size: 28rpx;
  margin-bottom: 5rpx;
}

.cell .distribute-status {
  position: relative;
  left: 350rpx;
  border: 1rpx #38b233 solid;
  padding: 1rpx 2rpx;
  color: #38b233;
  font-size: 15rpx;
}


.cell .detail {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #aaa;
  margin-top: 7rpx;
}


.cell .detail .noimg
{
  margin-left: 20rpx;
  width: 24rpx;
  height: 24rpx;
}

.cell .detail .no {
  font-size: 24rpx;
  margin-left: 10rpx;
}

.cell .detail .priceimg
{
  width: 24rpx;
  height: 24rpx;
}

.cell .detail .price {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.cell .detail .barimg
{
  width: 24rpx;
  height: 24rpx;
  margin-left: 20rpx;
}

.cell .detail .bar {
  margin-left: 10rpx;
  font-size: 24rpx;
}

.cell .status {
  width: 60rpx;
  height: 24rpx;
  margin-left: 20rpx;
}